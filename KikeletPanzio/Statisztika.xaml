<Window x:Class="KikeletPanzio.Statisztika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KikeletPanzio"
        mc:Ignorable="d"
        Title="Statisztika" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel>
            <RadioButton Name="rbtnBevetel" Content="Bevétel" Checked="rbtnBevetel_Checked"/>
            <RadioButton Name="rbtnLegKiadottSzoba" Content="Legtöbbet kiadott szoba" Checked="rbtnLegKiadottSzoba_Checked"/>
            <RadioButton Name="rbtnVendegLista" Content="Viszajáró vendégek listája" Checked="rbtnVendegLista_Checked"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Name="spMain">
            
        </StackPanel>
    </Grid>
</Window>
